<html xmlns:jsp="http://java.sun.com/JSP/Page" 
      xmlns:c="http://java.sun.com/jsp/jstl/core" 
      xmlns:fn="http://java.sun.com/jsp/jstl/functions" 
      xmlns:tiles="http://tiles.apache.org/tags-tiles" 
      xmlns:spring="http://www.springframework.org/tags">  

    <jsp:output doctype-root-element="HTML" doctype-system="about:legacy-compat" />
    
    <jsp:directive.page contentType="text/html;charset=UTF-8" />  
    <jsp:directive.page pageEncoding="UTF-8" /> 
    
    <tiles:insertAttribute name="header" ignore="true" />
    
    <body>
        <div class="container" style="vertical-align: middle">
          <form action="status" method="GET">
            <div id="myModal" class="modal show">
              <div class="modal-header">
                <h3>Grobot Server Login</h3>
              </div>
              <div class="modal-body">
                <input type="text" class="span4" placeholder="Username" />
                <input type="password" class="span4" placeholder="Password" />
                <label class="checkbox">
                  <input type="checkbox" name="rememberMe" /> Remember Username
                </label>
              </div>
              <div class="modal-footer">
                <input type="submit" class="btn btn-inverse" data-loading-text="Loggin in..." value="Login" />
              </div>
            </div>
          </form>
        </div>
    <tiles:insertAttribute name="jsIncludes" ignore="true" />
    </body>
</html>
