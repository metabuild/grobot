<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:amq="http://activemq.apache.org/schema/core"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
                        http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core-5.6.0.xsd">
                        
    <!--  ActiveMQ Broker -->
    <amq:broker id="grobot-broker" persistent="false" useJmx="true">
        <amq:managementContext>
            <amq:managementContext createConnector="true"/>
        </amq:managementContext>
        <amq:transportConnectors>
            <amq:transportConnector name="nio" uri="nio://0.0.0.0:61617" />
        </amq:transportConnectors>
    </amq:broker>
</beans>
